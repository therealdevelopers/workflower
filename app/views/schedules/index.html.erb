<article>
	<% if @schedules.empty? %>
		You have not any schedules yet. Make the <%= link_to 'new one', new_user_schedule_path, html_options = { class: "" } %>!
	<% else %>
		This is your schedules:
		<ul>
			<% @schedules.each do |schedule|%>
				<li>
					<%= link_to schedule.title, user_schedule_path(user_id: current_user.id, id: schedule.id) %>
				</li>
			<% end %>
		</ul>
		
	<% end %>
</article>
